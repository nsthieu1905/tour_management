<div class="fixed bottom-6 right-6 flex flex-col items-center space-y-3 z-50">
  <button
    id="aiAssistant"
    class="w-14 h-14 bg-green-600 text-white rounded-full shadow-lg flex items-center justify-center hover:bg-green-700 transition-colors hover:scale-110"
  >
    <i class="fas fa-robot text-xl"></i>
  </button>

  <button
    id="open-message"
    class="w-14 h-14 bg-blue-600 text-white rounded-full shadow-lg flex items-center justify-center hover:bg-blue-700 transition-colors hover:scale-110"
  >
    <i class="fas fa-comment text-xl"></i>
  </button>

  <button
    id="contact"
    class="w-14 h-14 bg-red-600 text-white rounded-full shadow-lg flex items-center justify-center hover:bg-red-700 transition-colors hover:scale-110"
  >
    <i class="fas fa-phone text-xl"></i>
  </button>
</div>

<!-- Chatbot Modal -->
<div id="chatbotModal" class="chatbot-modal hidden">
  <div class="chatbot-container">
    <!-- Header -->
    <div class="chatbot-header">
      <div class="chatbot-title">
        <span>Trợ lý du lịch</span>
      </div>
      <button class="chatbot-close" id="chatbotClose">
        <i class="fas fa-times"></i>
      </button>
    </div>

    <!-- Messages Container -->
    <div class="chatbot-messages" id="chatbotMessages">
      <div class="message bot-message">
        <div class="message-content">
          <p>
            Xin chào! Tôi là trợ lý du lịch của bạn. Hôm nay tôi có thể giúp gì
            cho bạn?
          </p>
        </div>
        <div class="message-time">Just now</div>
      </div>
    </div>

    <!-- Input Area -->
    <div class="chatbot-input-area">
      <form id="chatbotForm" class="chatbot-input-form">
        <input
          type="text"
          id="chatbotInput"
          class="chatbot-input"
          placeholder="Nhập tin nhắn..."
          autocomplete="off"
        />
        <button type="submit" class="chatbot-send-btn">
          <i class="fas fa-paper-plane"></i>
        </button>
      </form>
    </div>
  </div>
</div>

<!-- Message Modal -->
<div id="chatWindow" class="chat-window">
  <!-- Chat Header -->
  <div class="bg-blue-600 text-white p-4 flex items-center justify-between">
    <div class="flex items-center gap-3">
      <div
        class="w-10 h-10 bg-white rounded-full flex items-center justify-center"
      >
        <i class="fas fa-user text-blue-600"></i>
      </div>
      <div>
        <h3 class="font-semibold">Hỗ trợ khách hàng</h3>
      </div>
    </div>
    <button
      id="closeChatBtn"
      class="hover:bg-blue-700 p-2 rounded-full transition-colors"
    >
      <i class="fas fa-times text-xl"></i>
    </button>
  </div>

  <!-- Chat Messages -->
  <div id="chatMessages" class="chat-messages">
    <div class="message bot">Xin chào! Tôi có thể giúp gì cho bạn?</div>
  </div>

  <!-- Typing Indicator -->
  <div id="typingIndicator" class="typing-indicator">
    <span></span>
    <span></span>
    <span></span>
  </div>

  <!-- Chat Input -->
  <div class="p-4 border-t bg-white">
    <div class="flex gap-2">
      <input
        type="text"
        id="chatInput"
        placeholder="Nhập tin nhắn..."
        class="flex-1 px-4 py-2 border border-gray-300 rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500"
      />
      <button
        id="sendChatBtn"
        class="bg-blue-600 text-white px-6 py-2 rounded-full hover:bg-blue-700 transition-colors"
      >
        <i class="fas fa-paper-plane"></i>
      </button>
    </div>
  </div>
</div>

<!-- Contact Modal -->
<div id="contactModal" class="modal">
  <div class="bg-white rounded-2xl max-w-md w-full mx-4 overflow-hidden">
    <!-- Modal Header -->
    <div class="flex items-center justify-between p-6 border-b">
      <h2 class="text-2xl font-bold text-gray-900">Liên hệ tư vấn</h2>
      <button
        id="closeContactBtn"
        class="text-gray-500 hover:text-gray-700 transition-colors"
      >
        <i class="fas fa-times text-2xl"></i>
      </button>
    </div>

    <!-- Modal Content -->
    <div class="p-6 space-y-4">
      <!-- Hotline -->
      <a
        href="tel:19001234"
        class="block bg-blue-50 rounded-xl p-4 flex items-center gap-4 hover:bg-blue-100 transition-colors cursor-pointer"
      >
        <div
          class="w-12 h-12 bg-blue-600 rounded-full flex items-center justify-center flex-shrink-0"
        >
          <i class="fas fa-phone text-white text-xl"></i>
        </div>
        <div>
          <h3 class="font-semibold text-gray-900">Hotline 24/7</h3>
          <p class="text-blue-600 text-lg font-bold">1900 1234</p>
        </div>
      </a>

      <!-- Zalo -->
      <a
        href="https://zalo.me/0901234567"
        target="_blank"
        class="block bg-green-50 rounded-xl p-4 flex items-center gap-4 hover:bg-green-100 transition-colors cursor-pointer"
      >
        <div
          class="w-12 h-12 bg-green-600 rounded-full flex items-center justify-center flex-shrink-0"
        >
          <i class="fas fa-comment-dots text-white text-xl"></i>
        </div>
        <div>
          <h3 class="font-semibold text-gray-900">Chat Zalo</h3>
          <p class="text-green-600 text-lg font-bold">0901 234 567</p>
        </div>
      </a>

      <!-- Email -->
      <a
        href="mailto:info@viettravel.com"
        class="block bg-orange-50 rounded-xl p-4 flex items-center gap-4 hover:bg-orange-100 transition-colors cursor-pointer"
      >
        <div
          class="w-12 h-12 bg-orange-600 rounded-full flex items-center justify-center flex-shrink-0"
        >
          <i class="fas fa-envelope text-white text-xl"></i>
        </div>
        <div>
          <h3 class="font-semibold text-gray-900">Email</h3>
          <p class="text-orange-600 text-lg font-bold">info@viettravel.com</p>
        </div>
      </a>
    </div>

    <!-- Modal Footer -->
    <div class="p-6 bg-gray-50 border-t">
      <button
        id="closeContactBtnBottom"
        class="w-full bg-gray-700 text-white py-3 rounded-lg font-semibold hover:bg-gray-800 transition-colors"
      >
        Đóng
      </button>
    </div>
  </div>
</div>
