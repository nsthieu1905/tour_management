<main class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-8 min-h-screen pb-24">
  <div class="mb-6">
    <h1 class="text-2xl md:text-3xl font-bold text-gray-900">Đánh giá cho: {{tour.name}}</h1>
    <p class="text-gray-600 mt-1">Trung bình: <span class="font-semibold">{{tour.rating.average}}/5</span> ({{tour.rating.count}} đánh giá)</p>
  </div>

  <div class="bg-white rounded-xl shadow p-4 mb-6 flex flex-wrap gap-4 items-center">
    <div id="fb-filters" class="flex gap-2">
      <button class="fb-filter px-3 py-1 rounded-full border" data-star="0">Tất cả</button>
      <button class="fb-filter px-3 py-1 rounded-full border" data-star="5">5 sao</button>
      <button class="fb-filter px-3 py-1 rounded-full border" data-star="4">4 sao</button>
      <button class="fb-filter px-3 py-1 rounded-full border" data-star="3">3 sao</button>
      <button class="fb-filter px-3 py-1 rounded-full border" data-star="2">2 sao</button>
      <button class="fb-filter px-3 py-1 rounded-full border" data-star="1">1 sao</button>
    </div>
    <div class="ml-auto flex items-center gap-2">
      <label class="text-sm text-gray-600">Sắp xếp</label>
      <select id="fb-sort" class="border rounded-lg px-3 py-1">
        <option value="newest">Mới nhất</option>
        <option value="oldest">Cũ nhất</option>
        <option value="highest">Điểm cao</option>
        <option value="lowest">Điểm thấp</option>
      </select>
    </div>
  </div>

  <div id="fb-list" class="space-y-4" data-tour-id="{{tour._id}}"></div>
  <div id="fb-empty" class="hidden text-center text-gray-500 py-12">Chưa có nhận xét</div>

  <div id="fb-pagination" class="mt-6 flex items-center justify-center gap-2"></div>

</main>
<script id="__TOUR_DATA__" type="application/json">{{json tour}}</script>
<script type="module" src="/client/js/tour-feedbacks.js"></script>
