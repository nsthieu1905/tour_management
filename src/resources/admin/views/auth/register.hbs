<!-- Register Page -->
<div
  id="registerPage"
  class="fixed inset-0 bg-gradient-to-br from-green-600 via-blue-600 to-purple-800 flex items-center justify-center z-50"
>
  <div class="absolute inset-0 bg-black opacity-20"></div>

  <!-- Animated Background Elements -->
  <div class="absolute inset-0 overflow-hidden">
    <div
      class="absolute -top-40 -right-32 w-80 h-80 bg-white opacity-10 rounded-full animate-pulse"
    ></div>
    <div
      class="absolute -bottom-40 -left-32 w-96 h-96 bg-white opacity-5 rounded-full animate-pulse"
      style="animation-delay: 1s"
    ></div>
    <div
      class="absolute top-1/2 left-1/4 w-64 h-64 bg-white opacity-5 rounded-full animate-pulse"
      style="animation-delay: 2s"
    ></div>
  </div>

  <div
    class="relative bg-white rounded-2xl shadow-2xl p-8 w-full max-w-lg mx-4 max-h-screen overflow-y-auto transform transition-all duration-300"
  >
    <!-- Logo and Title -->
    <div class="text-center mb-8">
      <div
        class="gradient-bg p-4 rounded-full w-20 h-20 mx-auto mb-4 flex items-center justify-center"
      >
        <i class="fas fa-user-plus text-white text-2xl"></i>
      </div>
      <h1 class="text-3xl font-bold text-gray-900 mb-2">Tạo tài khoản mới</h1>
      {{!--
      <p class="text-gray-600">Đăng ký để trở thành đối tác TravelAdmin Pro</p>
      --}}
    </div>

    <!-- Register Form -->
    <form id="registerForm" class="space-y-6">
      <!-- Company Name -->
      {{!--
      <div class="relative">
        <label class="block text-sm font-medium text-gray-700 mb-2">
          <i class="fas fa-building mr-2"></i>Tên công ty/Tổ chức
        </label>
        <input
          type="text"
          id="companyName"
          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 pl-12"
          placeholder="Nhập tên công ty"
          required
        />
        <i class="fas fa-building absolute left-4 top-11 text-gray-400"></i>
      </div>
      --}}

      <!-- Full Name -->
      <div class="relative">
        <label class="block text-sm font-medium text-gray-700 mb-2">
          <i class="fas fa-user mr-2"></i>Họ và tên
        </label>
        <input
          type="text"
          id="fullName"
          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 pl-12"
          placeholder="Nhập họ và tên"
          required
        />
        <i class="fas fa-user absolute left-4 top-11 text-gray-400"></i>
      </div>

      <!-- Email -->
      <div class="relative">
        <label class="block text-sm font-medium text-gray-700 mb-2">
          <i class="fas fa-envelope mr-2"></i>Email
        </label>
        <input
          type="email"
          id="email"
          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 pl-12"
          placeholder="user@gmail.com"
          required
        />
        <i class="fas fa-envelope absolute left-4 top-11 text-gray-400"></i>
      </div>

      <!-- Phone -->
      <div class="relative">
        <label class="block text-sm font-medium text-gray-700 mb-2">
          <i class="fas fa-phone mr-2"></i>Số điện thoại
        </label>
        <input
          type="tel"
          id="phone"
          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 pl-12"
          placeholder="0901234567"
          required
        />
        <i class="fas fa-phone absolute left-4 top-11 text-gray-400"></i>
      </div>

      <!-- Business Type -->
      {{!--
      <div class="relative">
        <label class="block text-sm font-medium text-gray-700 mb-2">
          <i class="fas fa-briefcase mr-2"></i>Loại hình kinh doanh
        </label>
        <select
          id="businessType"
          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 pl-12"
          required
        >
          <option value="">Chọn loại hình</option>
          <option value="tour-operator">Công ty lữ hành</option>
          <option value="hotel">Khách sạn/Resort</option>
          <option value="restaurant">Nhà hàng</option>
          <option value="transport">Vận chuyển</option>
          <option value="guide">Hướng dẫn viên</option>
          <option value="other">Khác</option>
        </select>
        <i class="fas fa-briefcase absolute left-4 top-11 text-gray-400"></i>
      </div>
      --}}

      <!-- Username -->
      <div class="relative">
        <label class="block text-sm font-medium text-gray-700 mb-2">
          <i class="fas fa-at mr-2"></i>Tên đăng nhập
        </label>
        <input
          type="text"
          id="regUsername"
          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 pl-12"
          placeholder="Chọn tên đăng nhập"
          required
        />
        <i class="fas fa-at absolute left-4 top-11 text-gray-400"></i>
      </div>

      <!-- Password -->
      <div class="relative">
        <label class="block text-sm font-medium text-gray-700 mb-2">
          <i class="fas fa-lock mr-2"></i>Mật khẩu
        </label>
        <input
          type="password"
          id="regPassword"
          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 pl-12 pr-12"
          placeholder="Tạo mật khẩu mạnh"
          required
        />
        <i class="fas fa-lock absolute left-4 top-11 text-gray-400"></i>
        <button
          type="button"
          onclick="toggleRegisterPassword()"
          class="absolute right-4 top-11 text-gray-400 hover:text-gray-600"
        >
          <i class="fas fa-eye" id="regPasswordToggle"></i>
        </button>
      </div>

      <!-- Confirm Password -->
      <div class="relative">
        <label class="block text-sm font-medium text-gray-700 mb-2">
          <i class="fas fa-lock mr-2"></i>Xác nhận mật khẩu
        </label>
        <input
          type="password"
          id="confirmPassword"
          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 pl-12"
          placeholder="Nhập lại mật khẩu"
          required
        />
        <i class="fas fa-lock absolute left-4 top-11 text-gray-400"></i>
      </div>

      <!-- Password Strength Indicator -->
      <div id="passwordStrength" class="hidden">
        <div class="flex items-center space-x-2 text-sm">
          <span class="text-gray-600">Độ mạnh mật khẩu:</span>
          <div class="flex space-x-1">
            <div class="w-6 h-2 rounded-full bg-gray-200" id="strength1"></div>
            <div class="w-6 h-2 rounded-full bg-gray-200" id="strength2"></div>
            <div class="w-6 h-2 rounded-full bg-gray-200" id="strength3"></div>
            <div class="w-6 h-2 rounded-full bg-gray-200" id="strength4"></div>
          </div>
          <span id="strengthText" class="font-medium">Yếu</span>
        </div>
      </div>

      <!-- Terms and Conditions -->
      <div class="flex items-start space-x-3">
        <input
          type="checkbox"
          id="agreeTerms"
          class="mt-1 rounded border-gray-300 text-blue-600 focus:ring-blue-500"
          required
        />
        <label for="agreeTerms" class="text-sm text-gray-600">
          Tôi đồng ý với
          <a href="#" class="text-blue-600 hover:text-blue-800 font-medium"
            >Điều khoản sử dụng</a
          >
          và
          <a href="#" class="text-blue-600 hover:text-blue-800 font-medium"
            >Chính sách bảo mật</a
          >
          của TravelSmart Admin
        </label>
      </div>

      <!-- Marketing Consent -->
      <div class="flex items-start space-x-3">
        <input
          type="checkbox"
          id="marketingConsent"
          class="mt-1 rounded border-gray-300 text-blue-600 focus:ring-blue-500"
        />
        <label for="marketingConsent" class="text-sm text-gray-600">
          Tôi muốn nhận thông tin khuyến mãi và cập nhật sản phẩm qua email
        </label>
      </div>

      <!-- Register Button -->
      <button
        type="submit"
        class="w-full gradient-bg text-white py-3 rounded-lg font-semibold hover:opacity-90 transition-all duration-200 transform hover:scale-105 focus:outline-none focus:ring-4 focus:ring-blue-300"
      >
        <span id="registerButtonText">
          <i class="fas fa-user-plus mr-2"></i>Tạo tài khoản
        </span>
        <span id="registerSpinner" class="hidden">
          <i class="fas fa-spinner fa-spin mr-2"></i>Đang xử lý...
        </span>
      </button>

      <!-- Success Message -->
      <div
        id="registerSuccess"
        class="hidden bg-green-50 border border-green-200 rounded-lg p-4"
      >
        <div class="flex items-center">
          <i class="fas fa-check-circle text-green-500 mr-3"></i>
          <div class="text-sm text-green-700">
            <p class="font-medium mb-1">Đăng ký thành công!</p>
            <p>
              Chúng tôi đã gửi email xác thực đến địa chỉ của bạn. Vui lòng kiểm
              tra và xác thực tài khoản.
            </p>
          </div>
        </div>
      </div>

      <!-- Business Verification Notice -->
      {{!--
      <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
        <div class="flex items-start">
          <i class="fas fa-info-circle text-blue-500 mt-0.5 mr-3"></i>
          <div class="text-sm text-blue-700">
            <p class="font-medium mb-1">Xác thực doanh nghiệp</p>
            <p>
              Sau khi đăng ký, chúng tôi sẽ liên hệ để xác thực thông tin doanh
              nghiệp của bạn trong vòng 24-48 giờ.
            </p>
          </div>
        </div>
      </div>
      --}}
    </form>

    <!-- Back to Login -->
    <div class="text-center mt-6">
      <p class="text-sm text-gray-600">
        Đã có tài khoản?
        <button
          onclick="showLoginPage()"
          class="text-blue-600 hover:text-blue-800 font-medium underline"
        >
          Đăng nhập ngay
        </button>
      </p>
    </div>
  </div>
</div>

