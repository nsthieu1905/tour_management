<div class="flex pt-16">
  <main class="flex-1 ml-64 p-6">
    <!-- Settings Section -->
    <div id="settings" class="section">
      <div class="mb-6">
        <h2 class="text-3xl font-bold text-gray-900 mb-2">Cài đặt cá nhân</h2>

      </div>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Thông tin cá nhân -->
        <div class="lg:col-span-2">
          <div class="bg-white rounded-xl shadow-sm p-6 mb-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-6">
              Thông tin cá nhân
            </h3>
            <div class="space-y-4">
              <div class="grid grid-cols-2 gap-4">
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-2"
                    >Họ và tên</label
                  >
                  <input
                    type="text"
                    id="fullName"
                    class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500"
                    placeholder="Nhập họ và tên"
                  />
                  <p
                    id="fullNameError"
                    class="text-red-500 text-sm mt-1 hidden"
                  ></p>
                </div>
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-2"
                    >Email</label
                  >
                  <input
                    type="email"
                    id="email"
                    class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500"
                    placeholder="Nhập email"
                  />
                  <p
                    id="emailError"
                    class="text-red-500 text-sm mt-1 hidden"
                  ></p>
                </div>
              </div>
              <div class="grid grid-cols-2 gap-4">
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-2"
                    >Số điện thoại</label
                  >
                  <input
                    type="tel"
                    id="phone"
                    class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500"
                    placeholder="Nhập số điện thoại"
                  />
                  <p
                    id="phoneError"
                    class="text-red-500 text-sm mt-1 hidden"
                  ></p>
                </div>
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-2"
                    >Giới tính</label
                  >
                  <select
                    id="gender"
                    class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500"
                  >
                    <option value="">-- Chọn giới tính --</option>
                    <option value="male">Nam</option>
                    <option value="female">Nữ</option>
                    <option value="other">Khác</option>
                  </select>
                </div>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2"
                  >Ngày sinh</label
                >
                <input
                  type="date"
                  id="dateOfBirth"
                  class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500"
                />
              </div>
              <div class="pt-4">
                <button
                  id="updateProfileBtn"
                  class="w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition"
                >
                  <i class="fas fa-save mr-2"></i>Lưu thay đổi
                </button>
              </div>
            </div>
          </div>
        </div>

        <!-- Menu Sidebar -->
        <div class="space-y-3">
          <button
            id="profileTabBtn"
            class="w-full text-left bg-blue-600 text-white px-4 py-3 rounded-lg font-medium flex items-center"
          >
            <i class="fas fa-user mr-3"></i>Thông tin cá nhân
          </button>
          <button
            id="passwordTabBtn"
            class="w-full text-left bg-white text-gray-700 hover:bg-gray-50 px-4 py-3 rounded-lg font-medium border border-gray-300 flex items-center transition"
          >
            <i class="fas fa-lock mr-3"></i>Đổi mật khẩu
          </button>
        </div>
      </div>
    </div>

    <!-- Đổi mật khẩu Section -->
    <div id="changePasswordSection" class="hidden">
      <div class="mb-6">
        <h2 class="text-3xl font-bold text-gray-900 mb-2">Cài đặt cá nhân</h2>
 
      </div>
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
          <div class="lg:col-span-2">
            <div class="bg-white rounded-xl shadow-sm p-6 mb-6">
              <h3 class="text-lg font-semibold text-gray-900 mb-6">
                Đổi mật khẩu
              </h3>
              <div class="space-y-4">
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-2"
                    >Mật khẩu cũ</label
                  >
                  <input
                    type="password"
                    id="currentPassword"
                    class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500"
                    placeholder="Nhập mật khẩu cũ"
                  />
                  <p
                    id="currentPasswordError"
                    class="text-red-500 text-sm mt-1 hidden"
                  ></p>
                </div>
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-2"
                    >Mật khẩu mới</label
                  >
                  <input
                    type="password"
                    id="newPassword"
                    class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500"
                    placeholder="Nhập mật khẩu mới"
                  />
                  <p
                    id="newPasswordError"
                    class="text-red-500 text-sm mt-1 hidden"
                  ></p>
                </div>
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-2"
                    >Xác nhận mật khẩu</label
                  >
                  <input
                    type="password"
                    id="confirmPassword"
                    class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500"
                    placeholder="Xác nhận mật khẩu mới"
                  />
                  <p
                    id="confirmPasswordError"
                    class="text-red-500 text-sm mt-1 hidden"
                  ></p>
                </div>
                <div class="pt-4">
                  <button
                    id="changePasswordBtn"
                    class="w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition"
                  >
                    <i class="fas fa-key mr-2"></i>Đổi mật khẩu
                  </button>
                </div>
              </div>
            </div>
          </div>

          <!-- Menu Sidebar -->
          <div class="space-y-3">
            <button
              id="profileTabBtn2"
              class="w-full text-left bg-white text-gray-700 hover:bg-gray-50 px-4 py-3 rounded-lg font-medium border border-gray-300 flex items-center transition"
            >
              <i class="fas fa-user mr-3"></i>Thông tin cá nhân
            </button>
            <button
              id="passwordTabBtn2"
              class="w-full text-left bg-blue-600 text-white px-4 py-3 rounded-lg font-medium flex items-center"
            >
              <i class="fas fa-lock mr-3"></i>Đổi mật khẩu
            </button>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>


<script type="module" src="/admin/js/settings.js"></script>
