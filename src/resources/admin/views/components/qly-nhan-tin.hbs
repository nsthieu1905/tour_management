<div class="flex pt-16">
  <main class="flex-1 ml-64 p-6">
    <!-- Header Section -->

    <div class="flex justify-between items-center mb-6">
      <div>
        <h2 class="text-3xl font-bold text-gray-900 mb-2">Tin nhắn</h2>
        <p class="text-gray-600">Quản lý và trả lời tin nhắn từ khách hàng</p>
      </div>
    </div>

    <!-- Messages Container -->
    <div class="flex flex-1 overflow-hidden gap-0">
      <!-- Left Sidebar - Conversations List -->
      <div
        class="w-72 lg:w-80 bg-white border-r border-gray-200 flex flex-col flex-shrink-0"
      >
        <!-- Search -->
        <div class="p-3 lg:p-4 border-b border-gray-200">
          <div class="relative">
            <i
              class="fas fa-search absolute left-3 top-2.5 text-gray-400 text-sm"
            ></i>
            <input
              type="text"
              id="searchConversation"
              placeholder="Tìm kiếm trên Messenger"
              class="w-full pl-9 pr-3 py-2 text-sm bg-gray-100 border-0 rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500 focus:bg-white"
            />
          </div>
        </div>

        <!-- Tabs -->
        <div
          class="flex border-b border-gray-200 px-2 gap-2 bg-white flex-shrink-0"
        >
          <button
            class="flex-1 py-2 px-2 text-center text-xs lg:text-sm font-semibold text-gray-600 border-b-2 border-transparent hover:text-gray-900 transition"
            data-tab="all"
          >
            Tất cả
          </button>
          <button
            class="flex-1 py-2 px-2 text-center text-xs lg:text-sm font-semibold text-gray-600 border-b-2 border-transparent hover:text-gray-900 transition"
            data-tab="unread"
          >
            Chưa đọc
          </button>
        </div>

        <!-- Conversations List -->
        <div class="flex-1 overflow-y-auto" id="conversationsList">
          <div class="p-8 text-center text-gray-400">
            <i class="fas fa-spinner fa-spin text-2xl"></i>
            <p class="mt-2 text-sm">Đang tải...</p>
          </div>
        </div>
      </div>

      <!-- Right Side - Chat Area -->
      <div class="flex-1 flex flex-col bg-white min-w-0">
        <!-- Chat Header -->
        <div
          class="border-b border-gray-200 px-4 lg:px-6 py-3 lg:py-4 flex items-center justify-between bg-white sticky top-0 z-10 flex-shrink-0"
        >
          <div class="flex items-center flex-1 min-w-0" id="chatHeaderInfo">
            <div class="text-center text-gray-400 flex-1">
              <i class="fas fa-comments text-2xl lg:text-3xl mb-2"></i>
              <p class="text-sm lg:text-base">
                Chọn một cuộc hội thoại để bắt đầu
              </p>
            </div>
          </div>

          <!-- Chat Actions -->
          <div
            class="flex gap-2 lg:gap-4 flex-shrink-0"
            id="chatActions"
            style="display: none"
          >
            <button
              class="p-2 hover:bg-gray-100 rounded-full transition text-gray-700"
              title="Gọi"
            >
              <i class="fas fa-phone text-base lg:text-lg"></i>
            </button>
            <button
              class="p-2 hover:bg-gray-100 rounded-full transition text-gray-700"
              title="Video"
            >
              <i class="fas fa-video text-base lg:text-lg"></i>
            </button>
            <button
              class="p-2 hover:bg-gray-100 rounded-full transition text-gray-700"
              title="Thông tin"
            >
              <i class="fas fa-info-circle text-base lg:text-lg"></i>
            </button>
            <div class="border-l border-gray-200 ml-2 lg:ml-4 pl-2 lg:pl-4">
              <button
                id="closeConversationBtn"
                class="p-2 hover:bg-red-50 rounded-full transition text-red-600"
                title="Đóng cuộc hội thoại"
              >
                <i class="fas fa-ban text-base lg:text-lg"></i>
              </button>
            </div>
          </div>
        </div>

        <!-- Messages Area -->
        <div
          class="flex-1 overflow-y-auto px-4 lg:px-6 py-24 lg:py-26 space-y-4 bg-white"
          id="messagesContainer"
        >
          <div class="text-center text-gray-400 py-20">
            <i
              class="fas fa-comments text-4xl lg:text-5xl mb-4 block opacity-20"
            ></i>
            <p class="text-base lg:text-lg">
              Chọn một cuộc hội thoại để bắt đầu chat
            </p>
          </div>
        </div>

        <!-- Input Area -->
        <div class="border-t border-gray-200 p-3 lg:p-4 bg-white flex-shrink-0">
          <form id="messageForm" class="flex items-center gap-2 lg:gap-3">
            <button
              type="button"
              class="p-2 hover:bg-gray-100 rounded-full transition text-blue-500 flex-shrink-0"
              title="Thêm"
            >
              <i class="fas fa-plus text-lg lg:text-xl"></i>
            </button>

            <button
              type="button"
              class="p-2 hover:bg-gray-100 rounded-full transition text-blue-500 flex-shrink-0"
              title="Biểu cảm"
            >
              <i class="fas fa-face-smile text-lg lg:text-xl"></i>
            </button>

            <input
              type="text"
              id="messageInput"
              placeholder="Nhắn tin..."
              class="flex-1 px-3 py-2 text-sm border border-gray-300 rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent min-w-0"
              disabled
            />

            <button
              type="submit"
              class="p-2 hover:bg-gray-100 rounded-full transition text-blue-500 disabled:opacity-50 flex-shrink-0"
              id="sendBtn"
              disabled
            >
              <i class="fas fa-paper-plane text-lg lg:text-xl"></i>
            </button>
          </form>
        </div>
      </div>
    </div>
  </main>
</div>

<style>
  .message-container {
    display: flex;
    margin-bottom: 0.5rem;
    animation: slideIn 0.3s ease-out;
  }

  .message-container.admin-message {
    justify-content: flex-end;
  }

  .message-container.client-message {
    justify-content: flex-start;
  }

  .message-wrapper {
    display: flex;
    gap: 0.5rem;
    align-items: flex-end;
  }

  .message-container.client-message .message-wrapper {
    flex-direction: row;
  }

  .message-container.admin-message .message-wrapper {
    flex-direction: row-reverse;
  }

  @keyframes slideIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .message-content {
    max-width: 55%;
    padding: 0.75rem 1rem;
    border-radius: 18px;
    word-wrap: break-word;
    font-size: 0.95rem;
    line-height: 1.4;
  }

  .message-time {
    font-size: 0.75rem;
    color: #65676b;
    margin-top: 0.25rem;
  }

  .admin-message .message-content {
    background-color: #0084ff;
    color: white;
  }

  .client-message .message-content {
    background-color: #e5e5ea;
    color: #000;
  }

  .conversation-item {
    display: flex;
    align-items: center;
    padding: 0.75rem 0.5rem;
    cursor: pointer;
    transition: all 0.2s ease;
    border-radius: 0.5rem;
    margin: 0.25rem 0.5rem;
    position: relative;
  }

  .conversation-item:hover {
    background-color: #f0f0f0;
  }

  .conversation-item.active {
    background-color: #e7f3ff;
  }

  .conversation-avatar {
    width: 56px;
    height: 56px;
    border-radius: 50%;
    object-fit: cover;
    margin-right: 0.75rem;
    flex-shrink: 0;
    position: relative;
  }

  .conversation-info {
    flex-1;
    min-width: 0;
  }

  .conversation-name {
    font-weight: 600;
    color: #000;
    margin-bottom: 0.25rem;
    font-size: 0.95rem;
  }

  .conversation-preview {
    font-size: 0.875rem;
    color: #65676b;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .conversation-time {
    font-size: 0.75rem;
    color: #8a8d91;
    margin-left: auto;
    flex-shrink: 0;
    margin-right: 0.25rem;
  }

  .online-status {
    width: 14px;
    height: 14px;
    border-radius: 50%;
    background-color: #31a24c;
    border: 3px solid white;
    position: absolute;
    bottom: 0;
    right: 0;
  }

  .unread-badge {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: 20px;
    height: 20px;
    padding: 0 6px;
    background-color: #0084ff;
    color: white;
    border-radius: 10px;
    font-size: 0.75rem;
    font-weight: bold;
    margin-left: 0.5rem;
  }

  /* Scrollbar styling */
  #conversationsList::-webkit-scrollbar,
  #messagesContainer::-webkit-scrollbar {
    width: 8px;
  }

  #conversationsList::-webkit-scrollbar-track,
  #messagesContainer::-webkit-scrollbar-track {
    background: transparent;
  }

  #conversationsList::-webkit-scrollbar-thumb,
  #messagesContainer::-webkit-scrollbar-thumb {
    background-color: #ccc;
    border-radius: 4px;
  }

  #conversationsList::-webkit-scrollbar-thumb:hover,
  #messagesContainer::-webkit-scrollbar-thumb:hover {
    background-color: #999;
  }
</style>
