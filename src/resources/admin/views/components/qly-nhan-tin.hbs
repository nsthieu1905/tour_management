<div class="flex pt-16 h-screen overflow-hidden">
  <main class="flex-1 ml-64 p-6 flex flex-col h-full overflow-hidden">
    <!-- Header Section -->
    <div class="flex justify-between items-center mb-6 flex-shrink-0">
      <div>
        <h2 class="text-3xl font-bold text-gray-900 mb-2">Tin nhắn</h2>
        <p class="text-gray-600">Quản lý và trả lời tin nhắn từ khách hàng</p>
      </div>
    </div>

    <!-- Messages Container - Messenger Style -->
    <div
      class="flex flex-1 overflow-hidden gap-0 rounded-lg border border-gray-200 bg-white"
    >
      <!-- Left Sidebar - Conversations List -->
      <div
        class="w-72 bg-white border-r border-gray-200 flex flex-col flex-shrink-0 overflow-hidden"
      >
        <!-- Search -->
        <div class="p-3 border-b border-gray-200 flex-shrink-0">
          <div class="relative">
            <i
              class="fas fa-search absolute left-3 top-3 text-gray-500 text-sm"
            ></i>
            <input
              type="text"
              id="searchConversation"
              placeholder="Tìm kiếm"
              class="w-full pl-9 pr-4 py-2 text-sm bg-gray-100 border-0 rounded-full focus:outline-none focus:bg-white focus:ring-1 focus:ring-gray-300"
            />
          </div>
        </div>

        <!-- Tabs -->
        <div
          class="flex border-b border-gray-200 px-2 gap-0 bg-white flex-shrink-0"
        >
          <button
            class="flex-1 py-3 px-2 text-center text-xs font-medium border-b-2 border-red-500 text-red-600 transition"
            data-tab="all"
          >
            Tất cả
          </button>
          <button
            class="flex-1 py-3 px-2 text-center text-xs font-medium text-gray-600 border-b-2 border-transparent hover:text-black transition"
            data-tab="unread"
          >
            Chưa đọc
          </button>
        </div>

        <div
          class="flex-1 overflow-y-auto overflow-x-hidden"
          id="conversationsList"
        >
          <div class="p-8 text-center text-gray-400">
            <i class="fas fa-spinner fa-spin text-2xl"></i>
            <p class="mt-2 text-sm">Đang tải...</p>
          </div>
        </div>
      </div>

      <!-- Right Side - Chat Area -->
      <div class="flex-1 flex flex-col bg-white min-w-0 overflow-hidden">
        <!-- Chat Header -->
        <div
          class="border-b border-gray-200 px-4 py-3 flex items-center justify-between bg-white flex-shrink-0"
        >
          <div class="flex items-center flex-1 min-w-0" id="chatHeaderInfo">
            <div class="text-center text-gray-400 flex-1">
              <i class="text-2xl lg:text-3xl mb-2"></i>
              <p class="text-sm lg:text-base">
                Chọn một cuộc hội thoại để bắt đầu
              </p>
            </div>
          </div>
        </div>

        <div
          class="flex-1 overflow-y-auto overflow-x-hidden px-4 py-3 bg-white"
          id="messagesContainer"
        >
          <div class="text-center text-gray-400 py-20">
            <i
              class="fas fa-comments text-4xl lg:text-5xl mb-4 block opacity-20"
            ></i>
            <p class="text-base lg:text-lg">
              Chọn một cuộc hội thoại để bắt đầu chat
            </p>
          </div>
        </div>

        <!-- Input Area -->
        <div class="border-t border-gray-200 p-3 bg-white flex-shrink-0">
          <form id="messageForm" class="flex items-end gap-3">
            <input
              type="text"
              id="messageInput"
              placeholder="Aa"
              class="flex-1 px-4 py-2 text-sm border border-gray-300 rounded-full focus:outline-none focus:border-blue-500 min-w-0"
              disabled
            />

            <button
              type="submit"
              class="p-2 text-blue-500 hover:bg-gray-100 rounded-full transition disabled:opacity-50 flex-shrink-0"
              id="sendBtn"
              disabled
            >
              <i class="fas fa-paper-plane text-lg"></i>
            </button>
          </form>
        </div>
      </div>
    </div>
  </main>
</div>
