<!-- Add Tour Modal -->
<div
  id="addTourModal"
  class="fixed inset-0 bg-black bg-opacity-50 hidden z-50 flex items-center justify-center"
>
  <div
    class="bg-white rounded-xl p-6 w-full max-w-2xl mx-4 max-h-screen overflow-y-auto"
  >
    <div class="flex justify-between items-center mb-4">
      <h3 class="text-xl font-semibold text-gray-900">Thêm tour mới</h3>
      <button
        onclick="hideAddTourModal()"
        class="text-gray-400 hover:text-gray-600"
      >
        <i class="fas fa-times text-xl"></i>
      </button>
    </div>

    <form id="addTourForm" class="space-y-4" enctype="multipart/form-data">
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2"
          >Mã tour <span class="text-red-500">*</span></label
        >
        <input
          type="text"
          name="tourCode"
          class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500"
          placeholder="Nhập mã tour"
          required
        />
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2"
          >Tên tour <span class="text-red-500">*</span></label
        >
        <input
          type="text"
          name="name"
          class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500"
          placeholder="Nhập tên tour"
          required
        />
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2"
          >Điểm đến <span class="text-red-500">*</span></label
        >
        <input
          type="text"
          name="destination"
          class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500"
          placeholder="Nhập tên điểm đến"
        />
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2"
            >Số ngày <span class="text-red-500">*</span></label
          >
          <input
            type="number"
            name="duration[days]"
            class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500"
            placeholder="4"
          />
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2"
            >Số đêm <span class="text-red-500">*</span></label
          >
          <input
            type="number"
            name="duration[nights]"
            class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500"
            placeholder="3"
          />
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2"
            >Giá (VNĐ) <span class="text-red-500">*</span></label
          >
          <input
            type="number"
            name="price"
            class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500"
            placeholder="4500000"
          />
        </div>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2"
          >Mô tả tour</label
        >
        <textarea
          rows="4"
          name="description"
          class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500"
          placeholder="Nhập mô tả chi tiết về tour..."
        ></textarea>
      </div>

      <!-- Lịch trình chi tiết -->
      <div id="itineraryContainer">
        <label class="block text-sm font-medium text-gray-700 mb-4"
          >Lịch trình chi tiết</label
        >
        <div id="itineraryFields"></div>
      </div>

      <div class="gap-4"></div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2"
            >Ngày khởi hành <span class="text-red-500">*</span></label
          >
          <input
            type="date"
            id="departureInput"
            class="departure-input"
            placeholder="dd/mm/yyyy"
          />
          <div id="departureList" class="departure-list"></div>
          <input type="hidden" name="departureDates" id="departuresData" />
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2"
            >Sức chứa tối đa <span class="text-red-500">*</span></label
          >
          <input
            type="number"
            name="capacity[max]"
            class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500"
            placeholder="20"
          />
        </div>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2"
          >Ảnh tour <span class="text-red-500">*</span></label
        >

        <div
          class="upload-container"
          id="uploadContainer"
          onclick="document.getElementById('tourImages').click()"
        >
          <i class="fas fa-cloud-upload-alt"></i>
          <span>Nhấn để chọn ảnh hoặc kéo thả vào đây</span>
          <input
            type="file"
            name="images"
            id="tourImages"
            multiple
            accept="image/*"
            hidden
          />
        </div>

        <div id="imagePreview" class="image-preview"></div>
      </div>

      <div class="flex justify-end space-x-3 pt-4">
        <button
          type="button"
          onclick="hideAddTourModal()"
          class="px-4 py-2 text-gray-700 bg-gray-200 rounded-lg hover:bg-gray-300"
        >
          Hủy
        </button>
        <button
          type="submit"
          class="px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600"
        >
          Thêm tour
        </button>
      </div>
    </form>
  </div>
</div>
