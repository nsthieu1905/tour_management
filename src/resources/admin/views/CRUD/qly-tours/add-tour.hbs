<div
  id="addTourModal"
  class="fixed inset-0 bg-black bg-opacity-50 hidden z-50 flex items-center justify-center"
>
  <div
    class="bg-white rounded-xl p-6 w-full max-w-2xl mx-4 max-h-screen overflow-y-auto"
  >
    <div class="flex justify-between items-center mb-4">
      <h3 class="text-xl font-semibold text-gray-900">Thêm tour mới</h3>
      <button
        type="button"
        onclick="hideAddTourModal()"
        class="text-gray-400 hover:text-gray-600"
      >
        <i class="fas fa-times text-xl"></i>
      </button>
    </div>

    <form
      id="addTourForm"
      class="space-y-4"
      enctype="multipart/form-data"
      novalidate
    >
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2"
          >Mã tour <span class="text-red-500">*</span></label
        >
        <input
          type="text"
          name="tourCode"
          class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500"
          placeholder="Nhập mã tour"
        />
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2"
          >Tên tour <span class="text-red-500">*</span></label
        >
        <input
          type="text"
          name="name"
          class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500"
          placeholder="Nhập tên tour"
        />
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2"
          >Điểm đến <span class="text-red-500">*</span></label
        >
        <input
          type="text"
          name="destination"
          class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500"
          placeholder="Nhập tên điểm đến"
        />
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2"
            >Số ngày <span class="text-red-500">*</span></label
          >
          <input
            type="number"
            name="duration[days]"
            class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500"
            placeholder="4"
            min="1"
          />
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2"
            >Số đêm <span class="text-red-500">*</span></label
          >
          <input
            type="number"
            name="duration[nights]"
            class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500"
            placeholder="3"
            min="0"
          />
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2"
            >Giá (VNĐ) <span class="text-red-500">*</span></label
          >
          <input
            type="number"
            name="price"
            class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500"
            placeholder="4500000"
            min="1"
          />
        </div>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2"
          >Mô tả tour</label
        >
        <textarea
          rows="4"
          name="description"
          class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500"
          placeholder="Nhập mô tả chi tiết về tour..."
        ></textarea>
      </div>

      <!-- Lịch trình chi tiết -->
      <div id="itineraryContainer" style="display: none">
        <label class="block text-sm font-medium text-gray-700 mb-4"
          >Lịch trình chi tiết</label
        >
        <div id="itineraryFields"></div>
      </div>

      <div class="border border-gray-200 rounded-xl p-4">
        <div class="flex items-center justify-between mb-3">
          <h4 class="text-lg font-semibold text-gray-900">Dịch vụ đối tác</h4>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2"
              >Đối tác</label
            >
            <select
              id="partnerSelect"
              class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500"
            >
              <option value="">-- Chọn đối tác --</option>
            </select>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2"
              >Dịch vụ</label
            >
            <select
              id="partnerServiceSelect"
              class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500"
            >
              <option value="">-- Chọn dịch vụ --</option>
            </select>
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mt-4">
          <div id="partnerServiceQuantityWrap">
            <label class="block text-sm font-medium text-gray-700 mb-2"
              >Số lượng</label
            >
            <input
              type="number"
              id="partnerServiceQuantity"
              value="1"
              min="1"
              class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500"
            />
          </div>

          <div class="md:col-span-2">
            <label class="block text-sm font-medium text-gray-700 mb-2"
              >Ghi chú</label
            >
            <input
              type="text"
              id="partnerServiceNote"
              placeholder="VD: Bao gồm trong giá tour"
              class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500"
            />
          </div>

          <div class="flex items-end gap-3">
            <label class="inline-flex items-center gap-2 text-sm text-gray-700">
              <input id="partnerServiceIncluded" type="checkbox" checked />
              Bao gồm
            </label>
            <button
              type="button"
              id="addPartnerServiceBtn"
              class="flex-1 bg-indigo-600 text-white py-2 rounded-lg hover:bg-indigo-700 transition-colors"
            >
              Thêm
            </button>
          </div>
        </div>

        <div class="mt-4">
          <div id="selectedPartnerServicesList"></div>
        </div>

        <input type="hidden" name="partnerServices" id="partnerServicesData" />
      </div>

      <div class="gap-4"></div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2"
            >Ngày khởi hành <span class="text-red-500">*</span></label
          >
          <input
            type="date"
            id="departureInput"
            class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500"
            placeholder="dd/mm/yyyy"
          />
          <div id="departureList" class="mt-2"></div>
          <input type="hidden" name="departureDates" id="departuresData" />
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2"
            >Sức chứa tối đa <span class="text-red-500">*</span></label
          >
          <input
            type="number"
            name="capacity[max]"
            class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500"
            placeholder="20"
            min="1"
          />
        </div>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2"
          >Ảnh tour <span class="text-red-500">*</span></label
        >

        <div
          class="upload-container border-2 border-dashed border-gray-300 rounded-lg p-8 text-center cursor-pointer hover:border-blue-500 transition-colors"
          id="uploadContainer"
          onclick="document.getElementById('tourImages').click()"
        >
          <i class="fas fa-cloud-upload-alt text-4xl text-gray-400 mb-2"></i>
          <p class="text-gray-600">Nhấn để chọn ảnh hoặc kéo thả vào đây</p>
          <p class="text-sm text-gray-500 mt-1">
            Ảnh đầu tiên sẽ là ảnh đại diện
          </p>
          <input
            type="file"
            name="images"
            id="tourImages"
            multiple
            accept="image/*"
            hidden
          />
        </div>

        <div id="imagePreview" class="mt-3"></div>
      </div>

      <div class="flex justify-end space-x-3 pt-4 border-t">
        <button
          type="button"
          onclick="hideAddTourModal()"
          class="px-4 py-2 text-gray-700 bg-gray-200 rounded-lg hover:bg-gray-300 transition-colors"
        >
          Hủy
        </button>
        <button
          type="submit"
          class="px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition-colors"
        >
          Thêm tour
        </button>
      </div>
    </form>
  </div>
</div>
