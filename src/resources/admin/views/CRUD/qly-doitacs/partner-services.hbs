<div
  id="partnerServicesModal"
  class="fixed inset-0 bg-black bg-opacity-50 hidden flex items-center justify-center z-50"
>
  <div
    class="bg-white rounded-xl shadow-lg max-w-3xl w-full mx-4 max-h-[90vh] overflow-y-auto"
  >
    <div class="p-6 border-b border-gray-200 flex justify-between items-center">
      <h3 id="servicesModalTitle" class="text-2xl font-bold text-gray-900">
        Quản lý dịch vụ
      </h3>
      <button
        type="button"
        onclick="closePartnerServicesModal()"
        class="text-gray-400 hover:text-gray-600 transition-colors"
      >
        <i class="fas fa-times text-2xl"></i>
      </button>
    </div>

    <div class="p-6">
      <form
        id="partnerServiceForm"
        class="grid grid-cols-1 md:grid-cols-3 gap-4"
      >
        <div class="md:col-span-2">
          <label class="block text-sm font-medium text-gray-700 mb-2">
            Tên dịch vụ <span class="text-red-500">*</span>
          </label>
          <input
            type="text"
            id="serviceName"
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 text-base"
            placeholder="VD: Khách sạn 3* / Xe đưa đón / Ăn trưa..."
          />
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">
            Giá (VNĐ)
          </label>
          <input
            type="number"
            id="servicePrice"
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 text-base"
            placeholder="0"
            min="0"
          />
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">
            Trạng thái
          </label>
          <select
            id="serviceStatus"
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 text-base"
          >
            <option value="active">Hoạt động</option>
            <option value="inactive">Tạm dừng</option>
          </select>
        </div>

        <div class="flex items-end gap-3">
          <button
            type="button"
            id="serviceFormCancelBtn"
            class="flex-1 px-6 py-3 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 font-medium text-base hidden"
            onclick="resetPartnerServiceForm()"
          >
            Huỷ
          </button>
          <button
            type="submit"
            id="serviceFormSubmitBtn"
            class="flex-1 px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 font-medium text-base"
          >
            Thêm
          </button>
        </div>
      </form>

      <div class="mt-6">
        <div
          class="bg-gray-50 rounded-lg border border-gray-200 overflow-hidden"
        >
          <div class="overflow-x-auto">
            <table class="w-full">
              <thead class="border-b border-gray-200 bg-white">
                <tr>
                  <th
                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                  >
                    Tên dịch vụ
                  </th>
                  <th
                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                  >
                    Giá
                  </th>
                  <th
                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                  >
                    Trạng thái
                  </th>
                  <th
                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                  >
                    Thao tác
                  </th>
                </tr>
              </thead>
              <tbody
                class="bg-white divide-y divide-gray-200"
                id="partnerServicesList"
              >
                <tr>
                  <td colspan="4" class="px-6 py-8 text-center text-gray-500">
                    <i class="fas fa-spinner fa-spin mr-2"></i>Đang tải dữ
                    liệu...
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <div class="flex justify-end pt-6">
        <button
          type="button"
          class="px-6 py-3 bg-gray-200 text-gray-800 rounded-lg hover:bg-gray-300 font-medium"
          onclick="closePartnerServicesModal()"
        >
          Đóng
        </button>
      </div>
    </div>
  </div>
</div>
