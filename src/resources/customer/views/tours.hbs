<div class="min-h-screen bg-gradient-to-b from-slate-50 via-white to-indigo-50 pt-24 pb-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-6">
      <aside class="lg:col-span-3">
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden sticky top-24">
          <div class="p-4 border-b">
            <div class="text-sm font-semibold text-gray-900">Bộ lọc</div>
          </div>

          <div class="p-4 border-b">
            <div class="flex items-center justify-between mb-3">
              <div class="text-sm font-semibold text-gray-900">Danh mục tour</div>
              <a href="{{clearCategoryUrl}}" class="text-xs text-indigo-600 hover:underline">Tất cả</a>
            </div>
            <div class="space-y-1">
              {{#if categories}}
                {{#each categories}}
                  <a
                    href="{{url}}"
                    class="block px-3 py-2 rounded-lg text-sm {{#if (or (eq ../query.category slug) (eq ../query.category _id))}}bg-indigo-50 text-indigo-700 font-semibold{{else}}text-gray-700 hover:bg-gray-50{{/if}}"
                    title="{{name}}"
                  >
                    {{name}}
                  </a>
                {{/each}}
              {{else}}
                <div class="text-sm text-gray-500">Chưa có danh mục</div>
              {{/if}}
            </div>
          </div>

          <div class="p-4">
            <div class="flex items-center justify-between mb-3">
              <div class="text-sm font-semibold text-gray-900">Điểm đến</div>
              <a href="{{clearDestinationUrl}}" class="text-xs text-indigo-600 hover:underline">Tất cả</a>
            </div>
            <div class="space-y-1">
              {{#if destinations}}
                {{#each destinations}}
                  <a
                    href="{{url}}"
                    class="flex items-center justify-between px-3 py-2 rounded-lg text-sm {{#if (eq ../query.destination name)}}bg-indigo-50 text-indigo-700 font-semibold{{else}}text-gray-700 hover:bg-gray-50{{/if}}"
                    title="{{name}}"
                  >
                    <span class="truncate">{{name}}</span>
                    <span class="text-xs text-gray-500">{{count}}</span>
                  </a>
                {{/each}}
              {{else}}
                <div class="text-sm text-gray-500">Chưa có điểm đến</div>
              {{/if}}
            </div>
          </div>
        </div>
      </aside>

      <main class="lg:col-span-9">
        <div class="flex flex-col gap-4 mb-6">
          <div>
            {{#if query.q}}
              <h1 class="text-3xl font-bold text-gray-900">Kết quả tìm kiếm cho "{{query.q}}"</h1>
            {{else if query.destination}}
              <h1 class="text-3xl font-bold text-gray-900">Tour du lịch {{query.destination}}</h1>
            {{else}}
              <h1 class="text-3xl font-bold text-gray-900">Danh sách tours</h1>
            {{/if}}
            <p class="text-sm text-gray-600 mt-1">Tổng cộng {{total}} tour</p>
          </div>

          <form method="GET" action="/tours" class="bg-white rounded-xl shadow-sm p-4">
            <input type="hidden" name="category" value="{{query.category}}" />
            <input type="hidden" name="destination" value="{{query.destination}}" />

            <div class="grid grid-cols-1 md:grid-cols-12 gap-3">
              <div class="md:col-span-5">
                <label class="block text-sm font-medium text-gray-700 mb-2">Tìm kiếm</label>
                <input
                  type="text"
                  name="q"
                  value="{{query.q}}"
                  placeholder="Tên tour / điểm đến / mã tour"
                  class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-indigo-500"
                />
              </div>

              <div class="md:col-span-3">
                <label class="block text-sm font-medium text-gray-700 mb-2">Hạng tour</label>
                <select
                  name="type"
                  class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-indigo-500"
                >
                  <option value="" {{#if (eq query.type "")}}selected{{/if}}>Tất cả</option>
                  <option value="Tiết kiệm" {{#if (eq query.type "Tiết kiệm")}}selected{{/if}}>Tiết kiệm</option>
                  <option value="Tiêu chuẩn" {{#if (eq query.type "Tiêu chuẩn")}}selected{{/if}}>Tiêu chuẩn</option>
                  <option value="Giá tốt" {{#if (eq query.type "Giá tốt")}}selected{{/if}}>Giá tốt</option>
                  <option value="Cao cấp" {{#if (eq query.type "Cao cấp")}}selected{{/if}}>Cao cấp</option>
                </select>
              </div>

              <div class="md:col-span-3">
                <label class="block text-sm font-medium text-gray-700 mb-2">Sắp xếp</label>
                <select
                  name="sort"
                  class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-indigo-500"
                >
                  <option value="newest" {{#if (eq query.sort "newest")}}selected{{/if}}>Mới nhất</option>
                  <option value="oldest" {{#if (eq query.sort "oldest")}}selected{{/if}}>Cũ nhất</option>
                  <option value="price_asc" {{#if (eq query.sort "price_asc")}}selected{{/if}}>Giá tăng dần</option>
                  <option value="price_desc" {{#if (eq query.sort "price_desc")}}selected{{/if}}>Giá giảm dần</option>
                </select>
              </div>

              <div class="md:col-span-1 flex items-end justify-end">
                <button
                  type="submit"
                  class="w-full md:w-auto bg-indigo-600 text-white px-5 py-2 rounded-lg hover:bg-indigo-700 transition-colors"
                >
                  <i class="fas fa-search"></i>
                </button>
              </div>
            </div>
          </form>
        </div>

    {{#if tours}}
      <div class="space-y-4">
        {{#each tours}}
          <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
            <div class="flex flex-col md:flex-row">
              <div class="relative md:w-72 w-full h-52 md:h-48 bg-gray-100 flex-shrink-0">
                <img
                  src="{{thumbnail images}}"
                  alt="{{name}}"
                  class="w-full h-full object-cover"
                />
                {{#if tourType}}
                  <div class="absolute top-3 left-3">
                    <span class="tour-badge {{badgeClass tourType}}">
                      <i class="fas {{badgeIcon tourType}}"></i>
                      {{tourType}}
                    </span>
                  </div>
                {{/if}}
              </div>

              <div class="flex-1 p-4 flex flex-col">
                <div class="flex flex-col lg:flex-row lg:items-stretch lg:justify-between gap-3 flex-1">
                  <div class="min-w-0 flex flex-col flex-1">
                    <h3 class="text-lg font-bold text-gray-900 leading-snug line-clamp-3 min-h-[4.5rem]" title="{{name}}">
                      {{name}}
                    </h3>

                    <div class="mt-auto pt-2 flex flex-wrap gap-x-5 gap-y-2 text-sm text-gray-600">
                      <div class="flex items-center gap-2">
                        <i class="fas fa-clock text-indigo-600"></i>
                        <span>{{duration.days}} ngày {{duration.nights}} đêm</span>
                      </div>

                      <div class="flex items-center gap-2">
                        <i class="fas fa-calendar text-indigo-600"></i>
                        <span>
                          {{#if departureDates}}
                            {{#with (lookup departureDates 0)}}{{formatDate this.date}}{{/with}}
                          {{/if}}
                        </span>
                      </div>

                      <div class="flex items-center gap-2">
                        <i class="fas fa-star text-yellow-400"></i>
                        <span>{{rating.average}} ({{rating.count}})</span>
                      </div>
                    </div>
                  </div>

                  <div class="flex flex-col items-start lg:items-end gap-2 justify-end min-w-[180px]">
                    <div class="text-2xl font-bold text-orange-500 whitespace-nowrap">
                      {{formatPrice price}} đ
                    </div>

                    <button
                      class="bg-orange-500 text-white px-4 py-2 rounded-lg hover:bg-orange-600 transition-colors whitespace-nowrap min-w-[130px]"
                      onclick="window.location.href='/tours/{{slug}}'"
                    >
                      Xem Tour
                      <i class="fas fa-arrow-right ml-2"></i>
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    {{else}}
      <div class="text-center py-16 bg-white rounded-xl shadow-sm">
        <i class="fas fa-search text-6xl text-gray-300 mb-4"></i>
        <h3 class="text-xl font-semibold text-gray-700 mb-2">Không tìm thấy tour nào</h3>
        <p class="text-gray-600">Hãy thử đổi từ khóa hoặc bộ lọc.</p>
      </div>
    {{/if}}
      </main>
    </div>
  </div>
</div>
