<div class="flex pt-16">
  <main class="flex-1 ml-64 p-6">
    <!-- Tours Management Section -->
    <div id="tours" class="section">
      <div class="flex justify-between items-center mb-6">
        <div>
          <h2 class="text-3xl font-bold text-gray-900 mb-2">Quản lý Tour</h2>
          <p class="text-gray-600">
            Thêm mới, chỉnh sửa và theo dõi các tour du lịch
          </p>
        </div>
        <button
          onclick="showAddTourModal()"
          class="gradient-bg text-white px-6 py-3 rounded-lg hover:opacity-90 transition-opacity"
        >
          <i class="fas fa-plus mr-2"></i>Thêm tour mới
        </button>
      </div>

      <!-- Tour Filters -->
      <div class="bg-white p-4 rounded-xl shadow-sm mb-6">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
          <select
            class="border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500"
          >
            <option>Tất cả trạng thái</option>
            <option>Đang hoạt động</option>
            <option>Tạm dừng</option>
            <option>Hết chỗ</option>
          </select>

          <select
            class="border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500"
          >
            <option>Tất cả điểm đến</option>
            <option>Hà Nội</option>
            <option>TP.HCM</option>
            <option>Đà Nẵng</option>
            <option>Phú Quốc</option>
          </select>

          <input
            type="date"
            class="border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500"
          />

          <input
            type="text"
            placeholder="Tìm kiếm tour..."
            class="border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500"
          />
        </div>
      </div>

      <!-- Tours Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <div class="tour-card card-hover rounded-xl shadow-sm overflow-hidden">
          <div class="h-48 bg-gradient-to-r from-blue-400 to-blue-600 relative">
            <div class="absolute top-4 left-4">
              <span class="tour-badge badge-caocap">
                <i class="fas fa-gem"></i>
                Cao cấp
              </span>
            </div>
            <div class="absolute top-4 right-4">
              <button
                class="bg-white bg-opacity-20 text-white p-2 rounded-full hover:bg-opacity-30"
              >
                <i class="fas fa-heart"></i>
              </button>
            </div>
            <div class="absolute bottom-4 left-4 text-white">
              <h3 class="text-xl font-bold">Hạ Long - Sapa</h3>
              <p class="text-sm opacity-90">4 ngày 3 đêm</p>
            </div>
          </div>
          <div class="p-6">
            <div class="flex justify-between items-center mb-4">
              <span class="text-2xl font-bold text-blue-600"
                >4.500.000 VNĐ</span
              >
              <div class="text-right">
                <p class="text-sm text-gray-600">Còn lại</p>
                <p class="text-lg font-semibold text-orange-600">12/30 chỗ</p>
              </div>
            </div>
            <div
              class="flex items-center justify-between text-sm text-gray-600 mb-4"
            >
              <span><i class="fas fa-calendar mr-1"></i>15/12/2024</span>
              <span><i class="fas fa-users mr-1"></i>18 đã đặt</span>
              <span><i class="fas fa-star mr-1"></i>4.8 (24)</span>
            </div>
            <div class="flex space-x-2">
              <button
