<div class="flex pt-16">
  <main class="flex-1 ml-64 p-6 bg-gray-50 min-h-screen">
    <!-- Trash Tours Section -->
    <div id="trash-tours" class="section">
      <div class="flex justify-between items-center mb-6">
        <div>
          <h2 class="text-3xl font-bold text-gray-900 mb-2">Thùng rác Tour</h2>
          <p class="text-gray-600">
            Các tour đã bị xoá tạm thời khỏi hệ thống. Bạn có thể khôi phục hoặc
            xoá vĩnh viễn từng tour.
          </p>
        </div>

        <!-- Nút quay lại -->
        <button
          onclick="window.location.href='/admin/qly-tour'"
          class="bg-blue-500 text-white px-5 py-3 rounded-lg hover:bg-blue-600 transition-colors flex items-center"
        >
          <i class="fa-solid fa-arrow-left mr-2"></i>Quay lại
        </button>
      </div>

      <!-- Tours Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {{#each trashedTours}}
        <div class="tour-card rounded-xl shadow-sm bg-white overflow-hidden">
          <div class="h-48 relative">
            <img
              src="{{thumbnail this.images}}"
              alt="{{this.name}}"
              class="w-full h-full object-cover opacity-70 grayscale"
            />
            <div class="absolute top-4 left-4">
              <span
                class="bg-gray-700 bg-opacity-70 text-white text-sm px-3 py-1 rounded-full"
              >
                Đã xoá
              </span>
            </div>
          </div>

          <div class="p-6">
            <h3 class="text-xl font-bold text-gray-800 mb-2">{{this.name}}</h3>
            <p class="text-gray-600 mb-4">
              {{this.duration.days}} ngày {{this.duration.nights}} đêm •
              <span class="text-blue-600 font-medium"
                >{{formatPrice this.price}} VND</span
              >
            </p>

            <div
              class="flex justify-between items-center mb-4 text-sm text-gray-500"
            >
              <span
                ><i class="fas fa-calendar mr-1"></i>{{formatDate
                this.deletedAt}}</span
              >
              <span
                ><i class="fas fa-user mr-1"></i>Người xoá:
                {{this.deletedBy}}</span
              >
            </div>

            <!-- Actions -->
            <div class="flex space-x-2">
              <button
                onclick="restoreTour('{{this._id}}')"
                class="flex-1 bg-green-500 text-white py-2 rounded-lg hover:bg-green-600 transition-colors flex items-center justify-center"
              >
                <i class="fa-solid fa-rotate-left mr-1"></i>Khôi phục
              </button>
              <button
                onclick="deleteTourPermanently('{{this._id}}')"
                class="flex-1 bg-red-500 text-white py-2 rounded-lg hover:bg-red-600 transition-colors flex items-center justify-center"
              >
                <i class="fa-solid fa-trash-can mr-1"></i>Xoá vĩnh viễn
              </button>
            </div>
          </div>
        </div>
        {{/each}}
      </div>

      <!-- Empty State -->
      {{#unless trashedTours.length}}
      <div class="text-center text-gray-500 mt-20">
        <i class="fa-solid fa-trash text-5xl mb-4 text-gray-400"></i>
        <p>Không có tour nào trong thùng rác</p>
        <button
          onclick="window.location.href='/admin/qly-tour'"
          class="mt-6 bg-gray-500 text-white px-5 py-2 rounded-lg hover:bg-gray-600 transition-colors"
        >
          <i class="fa-solid fa-arrow-left mr-2"></i>Quay lại trang Quản lý Tour
        </button>
      </div>
      {{/unless}}
    </div>
  </main>
</div>

<script src="/js/dashboard.js"></script>
